{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "declarations.d.ts"
  ],
  "exclude": ["src/stories/**/*", "**/*.stories.*", "**/*.test.*", "node_modules", "dist"]
}
